{
    "name": "bringyourownideas/silverstripe-composer-versions",
    "description": "Collect information about composer package versions in SilverStripe",
    "type": "silverstripe-module",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/bringyourownideas/silverstripe-composer-versions",
    "keywords": [
        "silverstripe",
        "environment",
        "composer",
        "updates",
        "versions",
        "vulnerabilities",
        "security"
    ],
    "authors": [
        {
            "name": "Peter Thaleikis",
            "homepage": "https://thaleikis.de"
        }
    ],
    "require": {
        "php": ">5.3.2",
        "composer/composer": "^1.0",
        "silverstripe/framework": "^3.0"
    },
    "suggest": {
        "friendsofsilverstripe/silverstripe-maintenance": "Toolset to assist with the maintenance of a SilverStripe application"
    },
    "replace": {
        "spekulatius/silverstripe-composer-versions": "self.version"
    },
    "support": {
        "issues": "https://github.com/bringyourownideas/silverstripe-composer-versions/issues"
    }
}
